@import global

section.search
	width 100%
	top 70px
	display flex
	flex-flow column
	align-items center
	
	div.query
		display flex 
		
		form
			width 100%
			
			input
				width 100%
				color $oxford-blue
				text-align center
				letter-spacing 1px
				border 0
				outline 0
				background $mystic
				
				&::placeholder
					color $regent-grey
					text-align center
					letter-spacing 1px

	div.files
		display flex 
		flex-flow column
		
		a.file
			width 100%
			display flex
			flex-flow column
			align-items center
			background white
				
			h1
				width 100%
				color $oxford-blue
				
			hr
				height 3px
				border 0
				background $alabaster
				
			h2
				width 100%
				color $loblolly
				
			h3
				width 100%
				letter-spacing 2px
				color lighten($cranberry, 40%)

@media only screen and (max-width: $xsmall - 1)
	
	section.search
		padding 11px 0
		
		div.query
			width 80%
			padding 11px 0
			
			form
				
				input
					padding 8px 16px
					font 300 22px/1 $open-sans
					
					&::placeholder
						font 300 22px/1 $open-sans

		div.files
			width 80%
			
			a.file
				padding 22px
				margin 11px 0 
					
				h1
					font 300 32px/1.1 $open-sans
					
				hr
					width 80%
					margin 16px 0
					
				h2
					margin 5px 0 0 0
					font 300 20px/1.1 $open-sans
				
				h3
					margin 5px 0 0 0
					font 500 20px/1.1 $rajdhani
	

@media only screen and (min-width: $xsmall) and (max-width: $small - 1)

		
	section.search
		padding 13px 0
		
		div.query
			width 50%
			padding 13px 0
			
			form
				
				input
					padding 9px 18px
					font 300 20px/1 $open-sans
					
					&::placeholder
						font 300 20px/1 $open-sans

		div.files
			width 60%
			
			a.file
				padding 26px
				margin 13px 0 
					
				h1
					font 300 31px/1.2 $open-sans
					
				hr
					width 70%
					margin 18px 0
					
				h2
					margin 6px 0 0 0
					font 300 18px/1.1 $open-sans
					
				h3
					margin 6px 0 0 0
					font 500 18px/1.1 $rajdhani


@media only screen and (min-width: $small) and (max-width: $large - 1)

	section.search
		padding 15px 0
		
		div.query
			width 20%
			padding 15px 0
			
			form
				
				input
					padding 10px 20px
					font 300 18px/1 $open-sans
					
					&::placeholder
						font 300 18px/1 $open-sans

		div.files
			width 40%
			
			a.file
				padding 30px
				margin 15px 0 
		
					
				h1
					font 300 30px/1.3 $open-sans
					
				hr
					width 60%
					margin 20px 0
					
				h2
					margin 7px 0 0 0
					font 300 16px/1.1 $open-sans
					
				h3
					margin 7px 0 0 0
					font 500 16px/1.1 $rajdhani

@media only screen and (min-width: $large) and (max-width: $xlarge - 1)
			
	section.search
		padding 17px 0
		
		div.query
			width 20%
			padding 17px 0
			
			form
				
				input
					padding 11px 22px
					font 300 20px/1 $open-sans
					
					&::placeholder
						font 300 20px/1 $open-sans

		div.files
			width 40%
			
			a.file
				padding 34px
				margin 17px 0 
		
				h1
					font 300 31px/1.4 $open-sans
					
				hr
					width 60%
					margin 22px 0
					
				h2
					margin 8px 0 0 0
					font 300 18px/1.1 $open-sans
					
				h3
					margin 8px 0 0 0
					font 500 18px/1.1 $rajdhani
						

@media only screen and (min-width: $xlarge)
			
	section.search
		padding 19px 0
		
		div.query
			width 20%
			padding 19px 0
			
			form
				
				input
					padding 12px 24px
					font 300 22px/1 $open-sans
					
					&::placeholder
						font 300 22px/1 $open-sans

		div.files
			width 40%
			
			a.file
				padding 38px
				margin 19px 0 
					
				h1
					font 300 32px/1.5 $open-sans
					
				hr
					width 60%
					margin 24px 0
					
				h2
					margin 9px 0 0 0
					font 300 20px/1.1 $open-sans

				h3
					margin 9px 0 0 0
					font 500 20px/1.1 $rajdhani