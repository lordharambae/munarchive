@import global

section.navigation
	width 100%
	height 70px
	position fixed
	top 0
	left 0
	display flex
	align-items center
	justify-content space-between
	border-bottom 1px solid $gallery
	background white
	z-index 1
	
	h1
		background $burnt-sienna-cranberry
		color white
		
	div
		overflow auto
		
		a
			letter-spacing 2px
			text-transform uppercase
			
			&:link, &:visited, &:hover, &:visited:hover, &:focus
				transition 0.3s ease
				
	span
		width 70px
		height 70px
		
		&.inactive
			
			&::before, &::after
				content ""
				width 32px
				height 2px
				position absolute
				left 19px
				right 19px
				background $loblolly
				transform-orgin center center
				will-change transform
				transition 0.3s ease
				
			&::before
				top 28px
				
			&::after
				bottom 28px
				
			&:hover
				cursor pointer
				
				&::before, &::after
					cursor pointer
					background $shark
					transition 0.3s ease
					
		&.active
			
			&::before, &::after
				content ""
				width 32px
				height 2px
				position absolute
				left 19px
				right 19px
				background $loblolly
				transform-orgin center center
				will-change transform
				transition 0.3s ease
				
			&::before
				top 34px
				transform rotate(45deg)
				
			&::after
				bottom 34px
				transform rotate(135deg)
				
			&:hover
				cursor pointer
				
				&::before, &::after
					cursor pointer
					background $shark
					transition 0.3s ease


@media only screen and (max-width: $xsmall - 1)
	
	section.navigation
		
		h1
			padding 25px
			font 300 20px/1 $roboto-slab
			
		div

			&.inactive
				display none

			&.active
				width 100%
				position absolute
				top 70px
				left 0
				display flex
				flex-flow column
				align-items center
				background $oxford-blue
			
				a
					padding 28px
					font 500 22px/1 $rajdhani
					
					&:link, &:visited
						color $loblolly

					&:hover, &:visited:hover, &:focus
						color white
			
		span
			display inline-block


