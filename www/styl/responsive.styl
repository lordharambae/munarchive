@import global

@media only screen and (max-width: $xsmall - 1)
	
	section.navigation
		
		h1
			padding 25px
			font 300 20px/1 $roboto-slab
			
		div

			&.inactive
				display none

			&.active
				width 100%
				position absolute
				top 70px
				left 0
				display flex
				flex-flow column
				align-items center
				background $oxford-blue
			
				a
					padding 28px
					font 500 22px/1 $rajdhani
					
					&:link, &:visited
						color $loblolly

					&:hover, &:visited:hover, &:focus
						color white
			
		span
			display inline-block
			
	section.search
		padding 11px 0
		
		div.query
			width 80%
			padding 11px 0
			
			form
				
				input
					padding 8px 16px
					font 300 22px/1 $open-sans
					
					&::placeholder
						font 300 22px/1 $open-sans

		div.files
			width 80%
			
			a.file
				padding 22px
				margin 11px 0 
					
				h1
					font 300 32px/1.1 $open-sans
					
				hr
					width 80%
					margin 16px 0
					
				div
					
					h2
						margin 5px 0 0 0
						font 300 20px/1 $open-sans

	section.upload
		
		form 
			width 80%
			padding 8px 0
			
			input 
				padding 8px 16px
				margin 8px 0
				font 300 22px/1 $open-sans
				
				&[type="file"]
					
					&::-webkit-file-upload-button
						padding 8px 16px
						margin 8px 0
						font 300 22px/1 $open-sans
					
				&::placeholder
					font 300 22px/1 $open-sans
				
			button
				padding 8px 16px
				margin 8px 0
				font 300 24px/1 $rajdhani

